0 REM Graphics DMA
5 PRINT CHR$(27);"24";CHR$(19);:CLS
9 PRINT AT 10,5;">-->";
10 OUT 0x12,1: OUT 0x13, 0x98: OUT 0x14, 28: OUT 0x1B, 2: REM Layer 1 Graphics Mode
18 REM Set up DMA for Fill
19 OUT 0xDE, 0x00: OUT 0xDF, 0x00: OUT 0xDA, 0x00: OUT 0xDB, 0x00: REM 0 Times, 0 skip
20 OUT 0xD0, 0x06: OUT 0xD1, 0x00: OUT 0xD2, 0x00: REM Addr
21 OUT 0xD8, 0xC0: OUT 0xD9, 0x00: REM Length
22 OUT 0xDD, 0: REM Fill value
23 OUT 0xDC, 4: REM Do fill (with black)
24 REM Clear line 
25 OUT 0xD0, 0x06: OUT 0xD1, 0x00: OUT 0xD2, 0x00: REM Start
26 OUT 0xD8, 0x00: OUT 0xD9, 0x01: REM 1 px
27 OUT 0xDD, 0: REM Fill transparent
28 OUT 0xDA, 0x01: OUT 0xDB, 0x00: REM Skip 256
29 OUT 0xDE, 0x00: OUT 0xDF, 192: REM 192 times
30 OUT 0xDC, 4: REM Fill
35 Y = RND(256) * 256 + 255
36 POKE 6,Y,RND(16)+24
37 POKE 6,0xC000,24
39 REM Move screen left by one
40 OUT 0xD0, 0x06: OUT 0xD1, 0x00: OUT 0xD2, 0x01: REM Source Addr
41 OUT 0xD4, 0x06: OUT 0xD5, 0x00: OUT 0xD6, 0x00: REM Target Addr
42 OUT 0xD8, 0xC0: OUT 0xD9, 0x00: REM Length
43 OUT 0xDE, 0x00: OUT 0xDF, 0x00: OUT 0xDA, 0x00: OUT 0xDB, 0x00: REM 0 Times, 0 skip
44 OUT 0xDC, 1: REM Execute Copy
50 ZZ=IN(48):IF ZZ>64 THEN IF ZZ<128 THEN GOTO 200
60 GOTO 25
190 ZZ=IN(48):IF ZZ>64 THEN IF ZZ<128 THEN GOTO 200
191 GOTO 190
199 REM Reset Mode
200 OUT 0x13, 18: REM Hide the layer
